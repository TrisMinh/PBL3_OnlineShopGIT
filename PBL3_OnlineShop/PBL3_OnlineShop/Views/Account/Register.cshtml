@{
    Layout = "_Layout";  // Nếu bạn sử dụng layout chung, nếu không, xóa dòng này.
}

<!-- Modal Đăng Ký -->
<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title fs-5" id="exampleModalToggleLabel2">Sign Up</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="signup-main">
                    <form asp-action="Register" method="post">
                        <div class="modal-username">
                            <label for="newUsername">Username:</label>
                            <input type="text" id="newUsername" name="Email" placeholder="Enter a username" required>
                        </div>
                        <div class="modal-password">
                            <label for="newPassword">Password:</label>
                            <input type="password" id="newPassword" name="Password" placeholder="Enter a password" required>
                        </div>
                        <div class="modal-password">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm your password" required>
                        </div>
                        <div class="modal-inter">
                            <div class="button">
                                <button class="sign-up-button" type="submit">
                                    Sign Up
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="modal-sign-up">
                        <span>Already have an account?</span>
                        <a href="/" class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">
                            Login now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
