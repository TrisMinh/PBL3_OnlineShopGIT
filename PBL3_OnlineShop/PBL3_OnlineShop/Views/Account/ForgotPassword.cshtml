@{
    Layout = "_Layout";  // Nếu bạn sử dụng layout chung, nếu không, xóa dòng này.
}

<!-- Modal Quên Mật Khẩu -->
<div class="modal fade" id="exampleModalToggle3" aria-hidden="true" aria-labelledby="exampleModalToggleLabel3" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title fs-5" id="exampleModalToggleLabel3">Forgot Password</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="forgot-password-main">
                    <form asp-action="ForgotPassword" method="post">
                        <label for="forgotUsername">Enter your email or username to reset your password:</label>
                        <input type="email" id="forgotUsername" name="forgotUsername" placeholder="Enter your email or username" required>
                    </form>
                </div>
                <div class="modal-inter">
                    <div class="button">
                        <button class="reset-password-button" type="submit">
                            Reset Password
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
