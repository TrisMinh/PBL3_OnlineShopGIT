@{
    Layout = null; // Hoặc bỏ dòng này nếu bạn không dùng layout chung
    ViewData["Title"] = "ForgotPassword";
}
@model PBL3_OnlineShop.Models.ViewModels.ForgotPasswordView

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <title>Forgot Password</title>
</head>

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Forgot Password</h2>
    <form asp-action="ForgotPassword" method="post">
        <div class="mb-3">
            <label for="forgotUsername" class="form-label">Enter your email or username:</label>
            <input type="text" class="form-control" id="forgotUsername" name="ForgotUsername" asp-for="ForgotUsername" placeholder="Enter your email or username" required>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-warning">Reset Password</button>
        </div>
    </form>
    <div class="mt-3 text-center">
        <a href="/Account/Login">Back to login</a>
    </div>
</div>
