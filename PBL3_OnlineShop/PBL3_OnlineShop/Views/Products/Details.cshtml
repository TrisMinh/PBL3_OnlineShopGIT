@{
    var imageUrls = Model.ImageUrl.Split(",", StringSplitOptions.RemoveEmptyEntries);
    var mainImage = imageUrls.FirstOrDefault() ?? "~/images/default.png"; // fallback nếu rỗng
    var colorsArray = Model.Colors.Split(',').Select(c => c.Trim()).ToArray();
}
@model Products
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Detail.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Add other font links if needed based on Figma styles -->
</head>
<body>
    <div class="app">
        <!-- Container -->
        <div class="container product-detail-container">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs">
                <span>Home / Products / Detail</span>
            </div>
            <h1 class="detail-title">Detail</h1>

            <!-- Product Detail Section -->
            <div class="product-detail">
                <!-- Product Gallery -->
                <div class="product-gallery">
                    <div class="thumbnail-images">
                        @for (int i = 0; i < imageUrls.Length; i++)
                        {
                            <img src="@Url.Content(imageUrls[i])"
                                 alt="Thumbnail @(i + 1)"
                                 class="thumbnail @(i == 0 ? "active" : "")"
                                 onclick="changeMainImage(this)">
                        }
                    </div>
                    <div class="main-image">
                        <img id="mainImage" src="@Url.Content(mainImage)" alt="Main product image">
                    </div>
                </div>

                <!-- Product Info -->
                <div class="product-info">
                    <h2 class="product-name">@Model.ProductName</h2>
                    <div class="product-price">
                        @Math.Round(Model.SellingPrice - (@Model.SellingPrice * (decimal)@Model.SalePercentage), 2)
                    </div>
                    <p class="product-description">
                        @Model.Description
                    </p>

                    

                    <form asp-action="Add" asp-controller="Cart" method="get" class="action-buttons" style="display: block;">
                        <input type="hidden" name="id" value="@Model.ProductId" />
                        <!-- Color Selection -->
                        <div class="product-options">
                            <span>Color: </span>
                            @foreach (var color in colorsArray)
                            {
                                <input type="radio" id="@color" name="color" value="@color" class="color-option" />
                                <label for="@color">@color</label>
                            }
                        </div>
                        <!-- Size Selection -->
                        <div class="size-selector" style="margin-bottom: 12px;">
                            <span>Size: </span>

                            <input type="radio" id="sizeS" name="size" value="S" class="size-option" checked>
                            <label for="sizeS">S</label>

                            <input type="radio" id="sizeM" name="size" value="M" class="size-option">
                            <label for="sizeM">M</label>

                            <input type="radio" id="sizeL" name="size" value="L" class="size-option">
                            <label for="sizeL">L</label>

                            <input type="radio" id="sizeXL" name="size" value="XL" class="size-option">
                            <label for="sizeXL">XL</label>
                        </div>

                        <!-- ADD Button xuống dòng -->
                        <div style="display: block;">
                            <button type="submit" class="add-to-cart-btn">ADD</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <!-- End Container -->
    </div>
    <script src="~/js/Animate.js"></script>
</body>
</html>
