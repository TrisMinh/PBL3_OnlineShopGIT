@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_SmallLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Area - Manage Category</title>
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Management.css">
    <link rel="stylesheet" href="~/css/Siderbar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- Add specific styles for Management System Search if needed, or modify style.css -->
</head>
<body>
    <div class="management-system">
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_SidebarPartial.cshtml")
        <!-- Main Content -->
        <main class="main-content">
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_TopbarPartial.cshtml")
            @await Html.PartialAsync("_NavbarPartial")
            <section class="product-results-section">
                <div class="results-header">
                    <span class="results-count">Show @Model.Count() Categories:</span>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="product-action-btn">Add Category</a>
                    <!-- Add pagination or other controls if needed -->
                </div>
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>ID Category</th>
                            <th>Name Category</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>@item.Status</td>
                                <td class="operations">
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="operation-btn edit-btn">
                                        <img src="~/images/edit-icon.png">
                                    </a>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="operation-btn delete-btn confirmDeletion">
                                        <img src="~/images/542724.png" alt="Delete">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>