@model PBL3_OnlineShop.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_SmallLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Management.css">
</head>
<body>
    <div class="management-system">
        <aside class="sidebar">
            <div class="user-profile">
                <div class="avatar-container">
                    <img src="~/images/user-profile.png" alt="User Avatar" class="avatar">
                    <span class="status-indicator"></span>
                </div>
                <h2 class="user-name">Trung Trung</h2>
                <p class="user-role">Manager</p>
            </div>
            <nav class="main-nav">
                <ul>
                    <!-- Add 'active' class to the relevant item for this page if needed -->
                    <li class="nav-item active">
                        <a href="#">
                            <!-- Link to Management System 1 or appropriate page -->
                            <img src="~/images/manage-system-icon.png" alt="" class="nav-icon">
                            <span>Manage System</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <!-- Link to Customer Management -->
                            <img src="~/images/manage-customer-icon.png" alt="" class="nav-icon">
                            <span>Manage Customer</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <!-- Link to Order Management -->
                            <img src="~/images/manage-order-icon.png" alt="" class="nav-icon">
                            <span>Manage Order</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <!-- Link to Coupon Management -->
                            <img src="~/images/manage-coupon-icon.png" alt="" class="nav-icon">
                            <span>Manage Coupon</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <!-- Link to Rank Management -->
                            <img src="~/images/manage-rank-icon.png" alt="" class="nav-icon">
                            <span>Management Rank</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <!-- Link to Statistics -->
                            <img src="~/images/manage-statistics-icon.png" alt="" class="nav-icon">
                            <span>Manage Statictis</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <!-- Main Content -->
        <main class="main-content">
            <header class="top-bar">
                <h1 class="page-title">Management</h1>
                <div class="account-section">
                    <a href="ProfileAdminEdit.html" title="Edit Profile">
                        <img src="~/images/account-icon-large.png" alt="Edit Profile" class="account-icon">
                    </a>
                    <a href="index.html" title="Go to Home">
                        <img src="~/images/360_F_66468754_86IFi1dhqwtHdXzPeMQNhGtGp8Z2D3yC.jpg" alt="Go to Home">
                    </a>
                </div>
            </header>

            <section class="add-product-section">
                <!-- Form for Adding Product -->
                <form asp-action="Create" method="post" class="add-product-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Category Name</label>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label>Description</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Status</label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-actions mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </section>
        </main>
    </div>


    <script src="~/bootstrap/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
