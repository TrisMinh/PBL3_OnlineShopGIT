@model IEnumerable<Order>

@{
    ViewData["Title"] = "Search Order";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management Coupon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Management.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="management-system">
        <aside class="sidebar">
            <div class="user-profile">
                <div class="avatar-container">
                    <!-- Using image from top-level images/ folder -->
                    <img src="/images/455123067_1470091394391641_5075587184145921216_n.jpg" alt="User Avatar" class="avatar"> <!-- Figma 1:6 -->
                    <span class="status-indicator"></span> <!-- Figma 1:5 -->
                </div>
                <h2 class="user-name">Trung Trung</h2> <!-- Figma 1:7 -->
                <p class="user-role">Manager</p> <!-- Figma 1:8 -->
            </div>
            <nav class="main-nav">
                <ul>
                    <!-- Navigation items based on Figma Groups 1:9 to 1:29 -->
                    <li class="nav-item">
                        <!-- Figma Group 1:9 -->
                        <a href="ManagementSystemAdd.html">
                            <img src="/images/manage-system-icon.png" alt="" class="nav-icon"> <!-- Figma 1:12 -->
                            <span>Manage System</span> <!-- Figma 1:11 -->
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="ManagementCustomerAccount.html">
                            <img src="/images/manage-customer-icon.png" alt="" class="nav-icon">
                            <span>Manage Customer</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a href="#">
                            <img src="/images/manage-order-icon.png" alt="" class="nav-icon">
                            <span>Manage Order</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <img src="/images/manage-coupon-icon.png" alt="" class="nav-icon">
                            <span>Manage Coupon</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <img src="/images/manage-rank-icon.png" alt="" class="nav-icon">
                            <span>Management Rank</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#">
                            <img src="/images/manage-statistics-icon.png" alt="" class="nav-icon">
                            <span>Manage Statictis</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <header class="top-bar">
                <h1 class="page-title">Management</h1>
                <div class="account-section">
                    <a href="ProfileAdminEdit.html" title="Edit Profile">
                        <img src="/images/account-icon-large.png" alt="Edit Profile" class="account-icon">
                    </a>
                    <a href="index.html" title="Go to Home">
                        <img src="/images/360_F_66468754_86IFi1dhqwtHdXzPeMQNhGtGp8Z2D3yC.jpg" alt="Go to Home" class="account-placeholder">
                    </a>
                </div>
            </header>

            <form asp-action="Search" asp-controller="Order" method="get" class="coupon-filters">
                <div class="filter-group">
                    <label>ID order:</label>
                    <input type="text" id="coupon-id" name="orderID" value="@ViewBag.orderID">
                </div>
                <div class="filter-group">
                    <label>Customer Name:</label>
                    <input type="text" id="coupon-min" name="customerName" value="@ViewBag.customerName">
                </div>
                <div class="filter-group">
                    <label>Status:</label>
                    <select name="status" class="form-control valid">
                        <option>All</option>
                        <option value="1" selected="@(ViewBag.status == 2)">Pending</option>
                        <option value="2" selected="@(ViewBag.status == 1)">Shipped</option>
                        <option value="0" selected="@(ViewBag.status == 0)">Cancel</option>
                    </select>
                </div>
                <button class="search-button">Search</button>
            </form>

            <div class="results-header d-flex justify-content-between align-items-center">
                <span class="results-count">Show @Model.Count() order:</span>
            </div>

            <section class="coupon-table-section">
                <table class="coupon-table">
                    <thead>
                        <tr>
                            <th>ID Order</th>
                            <th>Customer Name</th>
                            <th>Product Name</th>
                            <th>Total Price</th>
                            <th>Order Date</th>
                            <th>Code</th>
                            <th>status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string st = "";
                            if (item.Status == 0)
                            {
                                st = "Cancelled";
                            }
                            else if (item.Status == 1)
                            {
                                st = "Pending";
                            }
                            else
                            {
                                st = "Shipped";
                            }
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @item.User.UserName
                                </td>
                                <td>
                                    @foreach (var product in item.OrderDetails)
                                    {
                                        <div>@product.Product.ProductName   -   @product.Color/@product.Size    (x @product.Quantity)</div>
                                    }
                                </td>
                                <td>@item.TotalPrice.ToString("C")</td>
                                <td>@item.OrderDate.ToString("dd-MM-yyyy")</td>
                                <td>
                                    @foreach (var product in item.OrderDetails)
                                    {
                                        <div>@product.Code</div>
                                    }
                                </td>
                                <td>
                                    @st
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <a asp-area="Admin" asp-action="Comfirm" asp-controller="Order" asp-route-id="@item.Id" class="comfirm-cacel-btn confirm-btn">Confirm</a>
                                        <a asp-area="Admin" asp-action="Cancel" asp-controller="Order" asp-route-id="@item.Id" class="comfirm-cacel-btn cancel-btn">Cancel</a>
                                    }
                                    else
                                    {
                                        <span></span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>

        </main>
    </div>

</body>
</html>
