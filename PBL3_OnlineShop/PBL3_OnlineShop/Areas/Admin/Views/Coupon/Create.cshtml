@model PBL3_OnlineShop.Models.Coupon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_SmallLayout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management Coupon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Management.css">
</head>
<body>
    <div class="management-system">
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_SidebarPartial.cshtml")
        <main class="main-content">
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_TopbarPartial.cshtml")
            <div class="add-coupon-dropdown-section">
                <a class="add-coupon-btn" asp-action="Index">
                    ← Back
                </a>
            </div>
            <section class="add-coupon-form">
                <form asp-area="Admin" asp-controller="Coupon" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label>Name Coupon:</label>
                            <input asp-for="Name" placeholder="Enter coupon name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Discount:</label>
                            <input asp-for="Discount" placeholder="e.g., 10% or $5">
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Description:</label>
                            <input asp-for="Description" placeholder="Enter description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Status:</label>
                            <select asp-for="status" class="form-control">
                                <option value="1">Active</option>
                                <option value="0">Hide</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Min Order Value:</label>
                            <input asp-for="MinOrderValue" placeholder="Enter Condition">
                            <span asp-validation-for="MinOrderValue" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Date Start:</label>
                            <input asp-for="StartDate">
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Date End:</label>
                            <input asp-for="EndDate">
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-submit">Submit</button>
                        </div>
                    </div>
                </form>
            </section>

        </main>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}