@model PBL3_OnlineShop.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_SmallLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Management.css">
</head>
<body>
    <div class="management-system">
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_SidebarPartial.cshtml")
        <!-- Main Content -->
        <main class="main-content">
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_TopbarPartial.cshtml")
            <section class="add-product-section">
                <form asp-action="Edit" method="post" class="add-product-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>UserName</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Passsword</label>
                                <input asp-for="Password" class="form-control" readonly/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <label>PhoneNumber</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Address</label>
                            <div style="display: flex; flex-direction: row; gap: 20px; width: 100%; margin-top: 8px;">
                                <select id="province" name="province" required style="flex: 1; min-width: 0; max-width: 25%;">
                                    <option value="">Tỉnh/Thành phố</option>
                                </select>
                                <select id="district" name="district" required style="flex: 1; min-width: 0; max-width: 25%;">
                                    <option value="">Quận/Huyện</option>
                                </select>
                                <input type="text" id="specific-address" name="specific-address" placeholder="Địa chỉ cụ thể" style="flex: 2; min-width: 0;">
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label>DateOfBirth</label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label>Role</label>
                            <select asp-for="Role" class="form-control" asp-items="ViewBag.RoleList">
                                <option>Choose a role</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label>Status</label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Address" id="hidden-address" />
                    <input type="hidden" asp-for="Password" id="hidden-password" />
                    <input type="hidden" asp-for="Email" id="hidden-email" />
                    <div class="form-actions mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Save Change</button>
                    </div>
                </form>
            </section>
        </main>
    </div>


    <script src="~/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/js/vn-address.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', function() {
            const addressFromDb = "@Model.Address";
            if (addressFromDb) {
                const addressParts = addressFromDb.split(' / ');
                if (addressParts.length >= 3) {
                    const provinceId = addressParts[0];
                    const districtId = addressParts[1];
                    const specificAddress = addressParts.slice(2).join(' / ');

                    setTimeout(() => {
                        const provinceSelect = document.getElementById('province');
                        for (let i = 0; i < provinceSelect.options.length; i++) {
                            if (provinceSelect.options[i].value === provinceId) {
                                provinceSelect.selectedIndex = i;
                                provinceSelect.dispatchEvent(new Event('change'));

                                setTimeout(() => {
                                    const districtSelect = document.getElementById('district');
                                    for (let j = 0; j < districtSelect.options.length; j++) {
                                        if (districtSelect.options[j].value === districtId) {
                                            districtSelect.selectedIndex = j;
                                            districtSelect.dispatchEvent(new Event('change'));
                                            break;
                                        }
                                    }
                                    document.getElementById('specific-address').value = specificAddress;
                                }, 100);
                                break;
                            }
                        }
                    }, 200);
                } else {
                    document.getElementById('specific-address').value = addressFromDb;
                }
            }
        });

        document.querySelector('.add-product-form').addEventListener('submit', function(e) {
            const province = document.getElementById('province').value;
            const district = document.getElementById('district').value;
            const specificAddress = document.getElementById('specific-address').value;
            
            console.log('Province value:', province);
            console.log('Province text:', document.getElementById('province').options[document.getElementById('province').selectedIndex].text);
            console.log('District value:', district);
            console.log('District text:', document.getElementById('district').options[document.getElementById('district').selectedIndex].text);
            console.log('Address:', specificAddress);
            
            // Lấy giá trị từ các input thường và gán vào hidden input
            const passwordInput = document.querySelector('input[name="Password"]');
            const emailInput = document.querySelector('input[name="Email"]');
            
            document.getElementById('hidden-password').value = passwordInput ? passwordInput.value || '@Model.Password' : '@Model.Password';
            document.getElementById('hidden-email').value = emailInput ? emailInput.value || '@Model.Email' : '@Model.Email';
            
            if (province && district) {
                document.getElementById('hidden-address').value = province + " / " + district + " / " + specificAddress;
                console.log('Final address saved:', document.getElementById('hidden-address').value);
            } else {
                console.log('Không đủ dữ liệu province/district');
                // Ngăn submit nếu thiếu dữ liệu
                e.preventDefault();
                alert('Vui lòng chọn đủ Tỉnh/Thành phố và Quận/Huyện');
            }
        });
    </script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
